<div class="content-box">
	<div class="content-box-header">
		<h3>查看货物(<%= @cargo.enterprise.name %>)</h3>
		<div class="operations">
			<%= link_to '编辑', edit_cargo_path(@cargo) %> |
			<%= link_to '返回', cargos_path %>
		</div>
	</div>
	<div class="content-box-content">
		<div class="tab-content default-tab">
			<p>
			  <b>货物编码:</b>
			  <%= @cargo.code %>
			</p>			
			<p>
			  <b>货物名称:</b>
			  <%= @cargo.name %>
			</p>
			
			<p>
			  <b>货物规格:</b>
			  <%= @cargo.specification %>
			</p>
			
			<p>
			  <b>申报单位:</b>
			  <span class="autoload" data-url=<%= dict_units_path %> ><%= @cargo.unit %></span>
			</p>
			
			<p>
			  <b>第一单位:</b>
			  <span class="autoload" data-url=<%= dict_units_path %> ><%= @cargo.unit1 %></span>
			</p>
			
			<p>
			  <b>第二单位:</b>
			  <span class="autoload" data-url=<%= dict_units_path %> ><%= @cargo.unit2 %></span>
			</p>			
			<!--<p>-->
			  <!--<b>产销国:</b>-->
			  <!--<span class="autoload" data-url=<%= dict_countries_path %> ><%= @cargo.trade_country %></span>-->
			<!--</p>-->
          <p>
            <b>货号:</b>
            <%= @cargo.no %>
          </p>
        </div>
	</div>
</div>
