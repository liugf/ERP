<div id="messages" style="display: none"> 
	<% @unread_messages = current_user.messages.unread %>
	<h3 class="unread_message_size"><%= @unread_messages.size %>条未读消息</h3>
 	<% @unread_messages.each do |message| %>
	<p>
		<strong><%= message.subject %></strong> <%= message.created_at.strftime('%Y-%m-%d %H:%M:%S') %> 来自 <%= message.peer %><br />
		<%= message.body %>
		<small><%= link_to "标记为已读", read_message_path(message), :class => "remove-link" %></small>
	</p>
 	<% end %>	
 	<script>
 		$(".content .remove-link").click(function(){
 			var p = $(this).parent().parent();
 			var href = $(this).attr("href")
 			$.post(href+".json", function(){
 				p.slideUp("normal", function(){
 					$("[href='" + href + "']").parent().parent().detach();
 					$(".unread_message_size").html($(".content .remove-link").length + "条未读消息")
 					if ($(".content .remove-link").length = 0) {
 						
 					}
 				});
 			});
 			return false;
 		});
 	</script>
 	
</div> 
<!-- End #messages -->



