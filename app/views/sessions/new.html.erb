<%= form_for(:session, :url => sessions_path) do |f| %>
<input name="url" type="hidden" value="<%= params[:url] %>" />
<p>
	<label>用户名</label>
	<%= f.text_field :username, :class => "text-input first-field" %>
</p>
<div class="clear"></div>
<p>
	<label>密码</label>
	<%= f.password_field :password, :class => "text-input" %>
</p>
<div class="clear"></div>
<p id="remember-password">
	<%= f.check_box :remember %>
	记住我
</p>
<div class="clear"></div>
<p>
	<%= f.submit "登录", :class => 'button' %>
</p>
<% end %>