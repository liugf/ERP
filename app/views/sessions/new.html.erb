<%= form_for(:session, :url => sessions_path) do |f| %>
<p>
	<label>用户名</label>
	<%= f.text_field :username, :class => "text-input" %>
</p>
<div class="clear"></div>
<p>
	<label>密码</label>
	<%= f.text_field :password, :class => "text-input" %>
</p>
<div class="clear"></div>
<p id="remember-password">
	<input type="checkbox" />
	Remember me
</p>
<div class="clear"></div>
<p>
	<%= f.submit "登录", :class => 'button' %>
</p>
<% end %>