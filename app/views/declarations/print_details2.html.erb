<style type="text/css">
    body {
        text-align: left;
        font-size: 16px;
    }

    .frame {
        margin: 0 auto;
        width: 824px;
        text-align: left;
    }

    .tr {
        padding: 1px 0 1px 0;
    }

    .table {
        border: 1px solid;
    }

    .table .tr {
        padding: 0;
        height: 32px;
        line-height: 32px;
        border-bottom: solid 1px;
    }

    .table .tr:last-child {
        border-bottom: none;
    }

    .table .tr .td {
        border-right: solid 1px;
        text-align: center;
    }

    .table .tr .td:last-child {
        border-right: none;
    }




</style>

<div class="frame">

  <!--设置-->
  <% products_size = @products.size %>
  <% page_size = 42 %>
  <%
     pages = products_size/page_size
     if products_size % page_size !=0
       pages += 1
     end
  %>
  <% (0..pages - 1).each do |page_count| %>
      <!--每一页的内容-->
      <div class="tr" style="height: 80px;"></div>
      <div class="tr" style="height: 80px; text-align: center; font-size: 35px;">合同成品出口详细表</div>
      <div class="tr" style="height: 20px;"></div>
      <div class="table">
        <div class="tr" style="height: 50px; line-height:50px;">
          <div class="td" style="width:35px;">序号</div>
          <div class="td" style="width:100px;">申报日期</div>
          <div class="td" style="width:100px;">海关编号</div>
          <div class="td" style="width:100px;">贸易方式</div>
          <div class="td" style="width:180px;">成品名称</div>
          <div class="td" style="width:100px;">出口数量</div>
          <div class="td" style="width:100px;">单位</div>
          <div class="td" style="width:100px;">累计</div>
        </div>
        <% start = page_count*page_size %>
        <% tail = (page_count + 1) * page_size - 1 > products_size ? products_size : (page_count + 1) * page_size - 1 %>
        <!--每一项-->
        <% @products[start..tail].each_with_index do |product, i| %>
            <div class="tr">
              <div class="td" style="width:35px;">
                <span class="content"><%= product.no %></span>
              </div>
              <!--<div class="td" style="width:80px;">-->
              <!--<span class="content"><%= dict_name(Dict::Unit, product.unit) %></span>-->
              <!--</div>-->
              <div class="td" style="width:100px;">
                <span class="content"><%= product.declare_date %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= product.entry_no %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= dict_name(Dict::TradeMode, product.trade_mode) %></span>
              </div>
              <div class="td" style="width:180px;">
                <span class="content"><%= product.name %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= product.quantity %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= dict_name(Dict::Unit, product.unit) %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= product.accumulation %></span>
              </div>
            </div>
        <% end %>
      </div>
      <div class="tr" style="height: 20px;"></div>
  <% end %>

</div>