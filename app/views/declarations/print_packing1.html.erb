<style type="text/css">

    @page {
        size: portrait;
    }
    body {
        font-size: 16px;
    }

    .frame {
        margin: 0 auto;
        width: 748px;
        text-align: left;
    }

    h1 {
        font-family: "STFangsong";
        font-size: 26px;
        font-weight: normal;
    }


    .table {
        border: 1px solid;
    }

    .tr {
        float: none;
        height: 30px;
        width: 100%;
        height: 30px;
    }

    .td {
        float: left;
        height: 30px;
    }

    .table .tr {
        height: 31px;
    }

    .table .td {
        border-right: 1px solid;
        height: 31px;
        text-align: center;
        line-height: 31px;
    }

    .table .last-tr {
        border-bottom: none;
    }

    .table .last-td {
        border-right: none;
    }

    .table .header {
        height: 40px;
        line-height: 40px;
        overflow: hidden;
    }



</style>


<div class="frame">
  <div style="width: 100%; height: 80px;"></div>
  <div class="tr" style="text-align: center; height: 70px;">
    <h1><b>装　箱　单</b><br />
      PACKING LIST</h1>
  </div>
  <div class="tr" style="height: 20px;">
    <div class="td" style="height: 20px; width: 516px;"></div>
    <div class="td" style="height: 20px; width: 80px;"><span class="bgText">发票号码：</span></div>
    <div class="td" style="height: 20px; width: 136px; border-bottom: 1px solid;"><span class="content"><%= @declaration.pre_entry_no.to_s[8,18] %></span></div>
  </div>
  <div class="tr" style="height: 20px; margin-top: 10px;">
    <div class="td" style="height: 20px; width: 105px;"><span class="bgText">商　　　号：</span></div>
    <div class="td" style="height: 20px; width: 354px; border-bottom: 1px solid;"><span class="content"><%= @declaration.foreign_enterprise.name rescue "" %></span></div>
    <div class="td" style="height: 20px; width: 57px;"></div>
    <div class="td" style="height: 20px; width: 80px;"><span class="bgText">合同号码：</span></div>
    <div class="td" style="height: 20px; width: 136px; border-bottom: 1px solid;"><span class="content"><%= @declaration.contract_no %></span></div>
  </div>
  <div class="tr" style="height: 20px; margin-top: 10px;">
    <div class="td" style="height: 20px; width: 105px;"><span class="bgText"><%= @declaration_type == "export" ? "发 货" : "收 货"  %> 单 位：</span></div>
    <div class="td" style="height: 20px; width: 354px; border-bottom: 1px solid;"><span class="content"><%= @declaration.enterprise.name %></span></div>
    <div class="td" style="height: 20px; width: 57px;"></div>
    <div class="td" style="height: 20px; width: 80px;"><span class="bgText">日　　期：</span></div>
    <div class="td" style="height: 20px; width: 136px; border-bottom: 1px solid;"><span class="content"><%= @declaration.declare_date.strftime('%Y年%m月%d日') %></span></div>
  </div>
  <div class="clear"></div>

  <div class="table" style=" margin-top: 10px; border-left: none; border-right: none;border-bottom: none; ">
    <div class="tr header" style="border-bottom: 1px solid;">
      <div class="td header" style="width: 35px;"><span class="bgText">序号</span></div>
      <div class="td header" style="width: 381px;"><span class="bgText">商　　　品　　　名　　　称</span></div>
      <div class="td header" style="width: 90px;"><span class="bgText">数量/单位</span></div>
      <div class="td header" style="width: 79px;"><span class="bgText">箱(件)数</span></div>
      <div class="td header" style="width: 79px;"><span class="bgText">总净重(kg)</span></div>
      <div class="td header last-td" style="width: 79px;"><span class="bgText">总毛重(kg)</span></div>
    </div>
    <div class="tr last-tr" >
      <div class="td last-td" >
        <% list_size = @declaration_packings.size > 20 ? 20 : @declaration_packings.size %>
        <% @declaration_packings[0..list_size-1].each do |packing| %>
            <div class="tr">
              <div class="td" style="width: 35px; "><span class="content"><%= packing.no %></span></div>
              <div class="td" style="width: 381px; "><span class="content"><%= packing.name %></span></div>
              <div class="td" style="width: 90px;font-size: 12px"><span class="content"><%= packing.quantity %><%= dict_name Dict::Unit, packing.unit %></span></div>
              <div class="td" style="width: 79px;font-size: 12px"><span class="content"><%= packing.package_amount %></span></div>
              <div class="td" style="width: 79px;font-size: 12px"><span class="content"><%= sprintf "%0.4f", packing.net_weight.round(4) %></span></div>
              <div class="td last-td" style="width: 79px;font-size: 12px"><span class="content"><%= sprintf "%0.4f", packing.gross_weight.round(4) %></span></div>
            </div>
        <% end %>
        <% if list_size < 20 %>
            <% (1..20-list_size).each do |i| %>
                <div class="tr">
                  <div class="td" style="width: 35px;"></div>
                  <div class="td" style="width: 381px;"></div>
                  <div class="td" style="width: 90px;"></div>
                  <div class="td" style="width: 79px;"></div>
                  <div class="td" style="width: 79px;"></div>
                  <div class="td last-td" style="width: 79px;"></div>
                </div>
            <% end %>
        <% end %>

        <%
           total_package_amount = 0
           total_gross_weight = 0
           total_net_weight = 0
           @declaration_packings.each do |packing|
             total_package_amount += packing.package_amount
             total_gross_weight += packing.gross_weight
             total_net_weight += packing.net_weight
           end
        %>

        <div class="tr">
          <div class="td" style="width: 35px;"></div>
          <div class="td" style="width: 381px;"></div>
          <div class="td" style="width: 90px;"></div>
          <div class="td editable" style="width: 79px;font-size: 12px"><span class="content"><%= total_package_amount %></span></div>
          <div class="td editable" style="width: 79px;font-size: 12px"><span class="content"><%= sprintf "%0.4f", total_net_weight.round(4) %></span></div>
          <div class="td editable last-td" style="width: 79px;font-size: 12px"><span class="content"><%= sprintf "%0.4f", total_gross_weight.round(4) %></span></div>
        </div>
      </div>
    </div>
  </div>
  <div class='seal-div hideseals ' style="display: none" title="拖动图片移动位置">
    <%= image_tag("seal1.png",  :alt => "印章", :class=>"seal", :id=>'seal_left', :width=>'150px', :style=>"z-index:100;cursor:move")  %>
    <span class='delete_seals' title='删除图片' style="position: relative; left:-20px; z-index: 100; cursor: pointer;"><%= image_tag("icons/cross.png") %></span>
  </div>
</div>