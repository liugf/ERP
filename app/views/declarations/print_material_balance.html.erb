<style type="text/css">
    body {
        text-align: left;
        font-size: 16px;
    }

    .frame {
        margin: 0 auto;
        width: 948px;
        text-align: left;
    }

    .tr {
        padding: 1px 0 1px 0;
    }

    .table {
        border: 1px solid;
    }

    .table .tr {
        padding: 0;
        height: 32px;
        line-height: 32px;
        border-bottom: solid 1px;
    }

    .table .tr:last-child {
        border-bottom: none;
    }

    .table .tr .td {
        border-right: solid 1px;
        text-align: center;
    }

    .table .tr .td:last-child {
        border-right: none;
    }




</style>

<div class="frame">

  <!--设置-->
  <% materials_size = @materials.size %>
  <% page_size = 42 %>
  <% pages = materials_size/page_size + 1 %>
  <% (0..pages - 1).each do |page_count| %>
      <!--每一页的内容-->
      <div class="tr" style="height: 80px;"></div>
      <div class="tr" style="height: 80px; text-align: center; font-size: 35px;">合同料件进口平衡表</div>
      <div class="tr" style="height: 20px;"></div>
      <div class="table">
        <div class="tr" style="height: 50px; line-height:50px;">
          <div class="td" style="width:35px;">序号</div>
          <div class="td" style="width:150px;">商品编码</div>
          <div class="td" style="width:180px;">料件名称</div>
          <div class="td" style="width:122px;">规格</div>
          <div class="td" style="width:100px;">实际进口数</div>
          <div class="td" style="width:80px;">单位</div>
          <div class="td" style="width:70px;">合同数量</div>
          <div class="td" style="width:100px;">进口金额</div>
          <div class="td" style="width:100px;">出口金额</div>
        </div>
        <% start = page_count*page_size %>
        <% tail = (page_count + 1) * page_size - 1 > materials_size ? materials_size : (page_count + 1) * page_size - 1 %>
        <!--每一项-->
        <% @materials[start..tail].each_with_index do |material_balance, i| %>
            <% material = material_balance[:material] %>
            <div class="tr">
              <div class="td" style="width:35px;">
                <span class="content"><%= i+1 %></span>
              </div>
              <div class="td" style="width:150px;">
                <span class="content"><%= material.code %></span>
              </div>
              <div class="td" style="width:180px;">
                <span class="content"><%= material.name %></span>
              </div>
              <div class="td" style="width:122px;">
                <span class="content"><%= material.specification %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= material.quantity %></span>
              </div>
              <div class="td" style="width:80px;">
                <span class="content"><%= material.unit %></span>
              </div>
              <div class="td" style="width:70px;">
                <span class="content"><%= material_balance[:contract_num] %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= material_balance[:import_price] %></span>
              </div>
              <div class="td" style="width:100px;">
                <span class="content"><%= material_balance[:export_price] %></span>
              </div>
            </div>
        <% end %>
      </div>
      <div class="tr" style="height: 20px;"></div>
  <% end %>

</div>