<%= render "shared/enterprise_selector" %>

<div class="content-box">
	<div class="content-box-header">
		<h3>合同列表</h3>
		<div class="operations">
			<%= link_to '添加新合同', new_contract_path %>
		</div>
	</div>
	<div class="content-box-content">
		<div class="tab-content default-tab">
			<table>
				<thead>
					<tr>
						<th>手册编号</th>
						<th>录入日期</th>
						<th>操作</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<td colspan="6"> <%= will_paginate @contracts %> </td>
					</tr>
				</tfoot>
				<tbody>
					<% @contracts.each do |contract| %>
					<tr>
						<td><%= link_to contract.manual, contract %></td>
						<td><%= contract.type_in_date.strftime('%Y-%m-%d %H:%M:%S') %></td>
						<td> <%= link_to image_tag("icons/pencil.png", :alt => "Edit"), edit_contract_path(contract) %>
						<%= link_to image_tag("icons/cross.png", :alt => "Delete"), contract, confirm: '确定删除?', method: :delete %> </td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
