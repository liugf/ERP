<%= render "shared/error_messages", :model => @item %>
<%= form_for(@item) do |f| %>

	<p>
		<label>编码</label>
		<%= f.text_field :code, :class => "text-input small-input first-field" %>
		<br />
	</p>
	<p>
		<label>名称</label>
		<%= f.text_field :name, :class => "text-input small-input" %>
		<br />
	</p>
	<p>
		<label>重量</label>
		<%= f.text_field :weight, :class => "text-input small-input" %>
		<br />
	</p>
	<p>
		<label>尺寸</label>
		<%= f.text_field :size, :class => "text-input small-input" %>
		<br />
	</p>
	<p>
		<%= f.submit :class => "button" %>
	</p>

<div class="clear"></div><!-- End .clear -->
<% end %>

