<%= render "shared/error_messages", :model => @item %>
<%= form_for(@item) do |f| %>
<fieldset>
	<p>
		<label for="user_username">编码</label>
		<%= f.text_field :code, :class => "text-input small-input first_field" %>
		<br />
	</p>
	<p>
		<label for="user_email">中文名称</label>
		<%= f.text_field :name, :class => "text-input medium-input" %>
		<br />
	</p>
	<p>
		<label for="user_email">英文名称</label>
		<%= f.text_field :english_name, :class => "text-input medium-input" %>
		<br />
	</p>
	<p>
		<%= f.submit :class => "button" %>
	</p>
</fieldset>
<div class="clear"></div><!-- End .clear -->
<% end %>

