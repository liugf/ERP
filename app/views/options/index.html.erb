<div class="content-box">
	<!-- Start Content Box -->
	<div class="content-box-header">
		<h3>常规选项</h3>
	</div>
	<!-- End .content-box-header -->
	<div class="content-box-content">
		<%= form_tag(options_update_path, :method => "post") do %>
			<fieldset>
				<p>
					<label>公司名称</label>
					<input name="options[company_name]" type="text" value="<%= @options["company_name"] %>" class="text-input small-input" />
					<br />
				</p>
				<p>
					<label>地址</label>
					<input name="options[address]" type="text" value="<%= @options["address"] %>" class="text-input medium-input" />
					<br />
				</p>
				<p>
					<label>电话</label>
					<input name="options[telephone]" type="tel" value="<%= @options["telephone"] %>" class="text-input small-input" />
					<br />
				</p>
				<p>
					<label>传真</label>
					<input name="options[fax]" type="text" value="<%= @options["fax"] %>" class="text-input small-input" />
					<br />
				</p>
				<p>
					<label>邮箱</label>
					<input name="options[email]" type="email" value="<%= @options["email"] %>" class="text-input small-input" />
					<br />
				</p>
				<p>
					<input class="button" type="submit" value="确定" name="submit">
				</p>
			</fieldset>
			<div class="clear"></div><!-- End .clear -->		
		<% end %>
	</div>
</div>
